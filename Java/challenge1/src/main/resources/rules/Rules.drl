rule "Fibroscopic Intubation SUCCESS"
    salience -130  // Lower salience than Default Easy Airway Approach so it fires afterward
    when
        $patient : PatientAirwayAssessment(
            recommendedApproach == "Fibroscopic Intubation"
        )
        $fact : Fact(
            id == 4,
            status == Status.SUCCESSFUL
        )
    then
        modify($patient) {
            setRecommendedApproach("Intubation")
        }
        Conclusion c = new Conclusion(Conclusion.INTUBATION);
        insert(c);
        logger.info($patient.toString());
end

